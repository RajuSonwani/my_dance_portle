extends base.pug

block scripts
     script
        include ../static/script.js

block style
    style
        include ../static/style.css
        include ../static/contactStyle.css

block content
    section#gallery
      div.glly
        div#main Welcome to My Dance Academy
        div#sub Eat Sleep Dance Repeat

    h1 Contact Us
    div#myForm
    form(action="/contact", method="post")
        input(type="text" name="name" placeholder="Input Your Name")
        input(type="text" name="gender" placeholder="Input Your Gender")
        input(type="text" name="address" placeholder="Input Your Address")
        input(type="phone" name="phone" placeholder="Input Your Phone")
        input(type="email" name="email" placeholder="Input Your Email")
        button(type="submit") submit